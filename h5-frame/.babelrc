{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "6.10",
                    "browsers": ["last 2 versions", "safari >= 7"]
                }
            }
        ],
        "@babel/preset-react"
    ],
    "plugins": [
        "@babel/plugin-proposal-object-rest-spread",
        "@babel/plugin-proposal-class-properties",
        [
            "@babel/plugin-transform-runtime",
            {
                "helpers": false,
                "regenerator": true,
                "absoluteRuntime": false
            }
        ],
        "@babel/plugin-transform-object-assign"
    ]
}
